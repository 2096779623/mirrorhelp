FROM python:3
ADD requirements.txt source/ /tmp/
WORKDIR /tmp
RUN pip install -r requirements.txt && sphinx-build source book
EXPORT /tmp/book


FROM smartentry/alpine:3.4-0.3.13
MAINTAINER Yifan Gao <docker@yfgao.com>
IMPORT /book/ /var/www
ADD .docker $ASSETS_DIR
RUN smartentry.sh build
PUSH ustclug/mirrorhelp
